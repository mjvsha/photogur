<h1>Log in </h1>

<%= form_tag sessions_path do %>
<div class="field">
    <%= label_tag :email %> <br>
    <%= text_field_tag :email, params[:email] %>
  </div>

  <div class="field">
    <%= label_tag :password %> <br>
    <%= password_field_tag :password %>

    <!-- im not understanding whats going on with the params hash
  why does the email one call params, but the password not explcitly calling paramas -->

  </div>

  <div class="actions">
      <%= submit_tag "Log in" %>
  </div>
<% end %>
